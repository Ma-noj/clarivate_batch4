package edu.clarivate.jdbcsteps.save;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class SaveUserInfo {
	public static void main(String[] args) {
		// Step1:- Load the Driver
		// (I)Driver->java.sql;
		// MySQl Sever Driver class Name ->com.mysql.cj.jdbc.Driver
		try {
			Class.forName("com.mysql.cj.jdbc.Driver");

			// Step 2:Get Connection
			// DBURL->Protocol:SubProtocol:SubName
			// Protocol->jdbc
			// SubProtocol->mysql
			// SubName->hostName(address):port_number?user=&password

			String dbUrl = "jdbc:mysql://localhost:3306?user=root&password=root";
			Connection conncetion = DriverManager.getConnection(dbUrl);
		} catch (ClassNotFoundException | SQLException e) {
			System.err.println("Driver Class Not Present");
		}
	}
}
